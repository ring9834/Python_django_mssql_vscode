    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py", //tells VS Code to run "${workspaceFolder}/manage.py" using the selected Python interpreter and the arguments in the args list
            "console": "integratedTerminal",
            "args": [
                "runserver",
                "--noreload",
                "--nothreading"
            ],
            "django": true //tells VS Code to enable debugging of Django page templates
        }
    ]
}
